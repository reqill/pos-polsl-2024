<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pospolsl2024.Views.TaxRatesForm"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Tax Name" Text="{Binding TaxName}"/>
        <Entry Placeholder="Tax Rate (%)" Keyboard="Numeric"
               Text="{Binding TaxRateValue, StringFormat='{0:N0}'}"/>
        <Label Text="{Binding ValidationError}" TextColor="Red" IsVisible="{Binding ValidationError, Converter={StaticResource NullToBoolConverter}}"/>
        <Button Text="Save" Clicked="SaveTaxRate"/>
        <Button Text="Cancel" Clicked="CancelForm"/>
    </VerticalStackLayout>
</ContentPage>
