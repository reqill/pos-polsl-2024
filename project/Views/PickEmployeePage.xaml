<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pospolsl2024.Views.PickTheEmployee"
             Title="Pick The Employee">
    <StackLayout>
        <CollectionView x:Name="EmployeeCollectionView"
                        ItemsSource="{Binding Employees}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10" BorderColor="LightGray" CornerRadius="5">
                        <StackLayout>
                            <Label Text="{Binding name}" FontSize="Medium" />
                            <Label Text="{Binding position}" FontSize="Small" TextColor="Gray" />
                            <Button Text="Log In" Clicked="OnEmployeeSelected" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>