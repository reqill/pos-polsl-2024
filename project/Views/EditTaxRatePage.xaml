<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pospolsl2024.Views.EditTaxRatePage"
             Title="Edit Tax Rate">

    <VerticalStackLayout Padding="10">
        <Entry x:Name="TaxNameEntry" Placeholder="Tax Name" Text="{Binding tax_name}" />
        <Entry x:Name="TaxRateEntry" Placeholder="Tax Rate" Keyboard="Numeric" Text="{Binding tax_rate}" />
        <Button Text="Save" Clicked="OnSaveButtonClicked" />
    </VerticalStackLayout>
</ContentPage>