<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:pospolsl2024.Models"   xmlns:local="clr-namespace:pospolsl2024"
             x:Class="pospolsl2024.Views.CategoryFormPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Entry Placeholder="Category Name" Text="{Binding category.category_name}" />
            <Editor Placeholder="Description" Text="{Binding category.description}" />

            <Image Source="{Binding ImageSource}" 
                   Aspect="AspectFit" 
                   HeightRequest="200" />
            <Button Text="Choose Photo" Clicked="OnChoosePhotoClicked" />

            <Button Text="{Binding ActionButtonText}" Clicked="OnSaveClicked" />
            <Button Text="Delete" IsVisible="{Binding IsDeleteVisible}" Clicked="OnDeleteClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
